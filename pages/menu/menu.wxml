<!-- pages/map/map.wxml -->
<import src="../../wxss/dist/loadmore/index.wxml" />
<import src="../../wxss/dist/capsule/index.wxml" />
<import src="../../wxss/dist/switch/index.wxml" />

<view class="container">
  <view class="zan-panel-title">
    自定义菜单
  </view>
  <template is="zan-loadmore" data="{{ loading }}" />
  <block wx:for="{{config.dishesObjects}}" wx:for-item="dish">
    <view id="{{index}}" data-index="{{index}}" class="zan-panel" bindtap="bindViewTap">
      <view class="zan-cell  zan-cell--access">
        <view class="zan-cell__bd">
          <view class="zan-cell__text">
            {{index + 1}}. {{dish.name}}
          </view>
          <view class="zan-cell__desc">
            <view>
               <template wx:if="{{dish.breakfast}}" is="capsule" data="{{  rightText: '早餐', type: 'danger' }}" />
              <template wx:if="{{dish.lunch}}" is="capsule" data="{{ leftText: '', rightText: '午餐', color: '#9966CC' }}" />
              <template wx:if="{{dish.dinner}}" is="capsule" data="{{ leftText: '', rightText: '晚餐', color: '#38f' }}" />
              <template wx:if="{{dish.night}}" is="capsule" data="{{ leftText: '', rightText: '夜宵', color: '#FF6633' }}" /> 
              <!-- <view wx:if="{{dish.breakfast}}" class="zan-tag zan-tag--danger">早餐</view>
              <view wx:if="{{dish.lunch}}" class="zan-tag zan-tag--warn">午餐</view>
              <view wx:if="{{dish.dinner}}" class="zan-tag zan-tag--primary">晚餐</view>
              <view wx:if="{{dish.night}}" class="zan-tag zan-tag--plain">夜宵</view> -->
              </view>
          </view>
        </view>
        <template is="zan-switch" data="{{ checked:dish.on }}"/>
      </view>
    </view>
  </block>
</view>

